---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="max-w-4xl mx-auto text-center">
    <div class="glass-panel p-12 md:p-16">
      <h1 class="text-8xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
        404
      </h1>
      <h2 class="text-3xl font-semibold mb-6">Page Not Found</h2>
      <p class="text-xl text-[var(--text-secondary)] mb-8">
        Sorry, the page you're looking for doesn't exist.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/" class="glass-button">
          Go Home
        </a>
        <a href="/blog" class="glass-button">
          View Blog
        </a>
      </div>
    </div>
  </div>
</Layout>