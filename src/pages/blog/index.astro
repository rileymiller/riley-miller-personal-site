---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by date, newest first
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Blog - Riley Miller">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-5xl font-bold mb-12">Blog</h1>
    
    <div class="space-y-8">
      {posts.map((post) => (
        <article class="glass-panel p-8 hover:scale-[1.01] transition-transform">
          <a href={`/blog/${post.slug}`} class="block">
            <h2 class="text-3xl font-semibold mb-3 hover:text-primary transition-colors">
              {post.data.title}
            </h2>
            <time class="text-sm text-[var(--text-muted)]">
              {post.data.date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
            <p class="mt-4 text-[var(--text-secondary)] text-lg">
              {post.data.description}
            </p>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="mt-6 flex gap-2 flex-wrap">
                {post.data.tags.map((tag) => (
                  <span class="px-3 py-1 bg-glass-dark backdrop-blur-sm border border-glass-border rounded-full text-sm">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </a>
        </article>
      ))}
    </div>
    
    {posts.length === 0 && (
      <div class="glass-panel p-12 text-center">
        <p class="text-xl text-[var(--text-secondary)]">
          No blog posts yet. Check back soon!
        </p>
      </div>
    )}
  </div>
</Layout>