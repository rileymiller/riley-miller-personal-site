---
import Layout from "../layouts/Layout.astro"
import { getCollection } from "astro:content"

const posts = await getCollection("blog", ({ data }) => {
  return data.draft !== true
})

// Sort posts by date, newest first
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())

// Get recent posts for homepage
const recentPosts = posts.slice(0, 5)
---

<Layout title="Riley Miller">
  <div class="relative">
    <!-- Desktop Layout -->
    <div
      class="hidden lg:flex items-center justify-center min-h-screen relative z-10"
    >
      <!-- Hero Section -->
      <section class="max-w-md text-center">
        <h1 class="text-5xl mb-4 font-normal text-white">Riley Miller</h1>
        <p class="text-lg text-gray-300 mb-2">
          Staff AI Engineer at <a
            href="https://getbreezyapp.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-300 hover:underline hover:text-white">Breezy</a
          >
        </p>
        <p class="text-gray-400">
          Customer-obsessed Product Engineer who ships
        </p>
      </section>
    </div>

    <!-- Mobile Layout -->
    <div
      class="lg:hidden flex flex-col items-center justify-center min-h-screen relative z-10"
    >
      <!-- Hero Section -->
      <div class="px-6">
        <section class="text-center">
          <h1 class="text-4xl mb-4 font-normal text-white">Riley Miller</h1>
          <p class="text-lg text-gray-300 mb-2">
            Staff AI Engineer at <a
              href="https://getbreezyapp.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:underline hover:text-white">Breezy</a
            >
          </p>
          <p class="text-gray-400">
            Customer-obsessed Product Engineer who ships
          </p>
        </section>
      </div>
    </div>
  </div>
</Layout>
