---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by date, newest first
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get recent posts for homepage
const recentPosts = posts.slice(0, 5);
---

<Layout title="Riley Miller">
  <div class="py-20 max-w-3xl mx-auto">
    <!-- Hero Section -->
    <section class="mb-20 text-center">
      <h1 class="text-5xl mb-6 font-normal">
        Work. Hobby. <span class="text-[var(--accent-primary)]">Open Source</span>.
      </h1>
      <p class="text-[var(--text-secondary)] max-w-2xl mx-auto">
        I'm a software engineer passionate about <span class="text-[var(--text-primary)]">building in public</span>. 
        Here you can navigate to <span class="text-[var(--text-primary)]">{posts.length} different</span> blog posts, 
        projects, and thoughts I've shared. Some are still active, others have been discontinued.
      </p>
    </section>

    <!-- Featured Projects -->
    <section class="mb-20">
      <h2 class="text-2xl mb-8">Featured Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="https://github.com/rileymiller" target="_blank" rel="noopener noreferrer" class="group block p-6 border border-[var(--border-glass)] rounded-lg hover:border-[var(--text-muted)] transition-colors">
          <h3 class="text-lg mb-2 group-hover:text-[var(--text-primary)] transition-colors">Personal Site</h3>
          <p class="text-sm text-[var(--text-secondary)] mb-4">This website built with Astro</p>
          <p class="text-xs text-[var(--text-muted)] uppercase tracking-wider">Open Source</p>
        </a>
        
        <a href="https://github.com/rileymiller" target="_blank" rel="noopener noreferrer" class="group block p-6 border border-[var(--border-glass)] rounded-lg hover:border-[var(--text-muted)] transition-colors">
          <h3 class="text-lg mb-2 group-hover:text-[var(--text-primary)] transition-colors">Projects</h3>
          <p class="text-sm text-[var(--text-secondary)] mb-4">Various experiments and tools</p>
          <p class="text-xs text-[var(--text-muted)] uppercase tracking-wider">Active Development</p>
        </a>
      </div>
    </section>

    <!-- Recent Posts -->
    <section>
      <h2 class="text-2xl mb-8">All Posts</h2>
      <div class="space-y-8">
        {recentPosts.map((post) => (
          <article>
            <a href={`/blog/${post.slug}`} class="group block">
              <div class="flex items-baseline justify-between">
                <h3 class="text-lg group-hover:text-[var(--text-primary)] transition-colors">
                  {post.data.title}
                </h3>
                <time class="text-sm text-[var(--text-muted)] ml-4">
                  {post.data.date.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'short'
                  })}
                </time>
              </div>
              <p class="mt-1 text-sm text-[var(--text-secondary)]">
                {post.data.description}
              </p>
            </a>
          </article>
        ))}
      </div>
      
      {posts.length > 5 && (
        <div class="mt-12 text-center">
          <a href="/blog" class="text-sm hover:text-[var(--text-primary)] transition-colors">
            View all {posts.length} posts â†’
          </a>
        </div>
      )}
    </section>
  </div>
</Layout>