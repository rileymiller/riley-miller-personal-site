---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by date, newest first
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get recent posts for homepage
const recentPosts = posts.slice(0, 5);
---

<Layout title="Riley Miller">
  <div class="py-32 max-w-2xl mx-auto">
    <!-- Hero Section -->
    <section class="mb-32 text-center">
      <h1 class="text-5xl mb-4 font-normal">
        Riley Miller
      </h1>
      <p class="text-lg text-[var(--text-secondary)] mb-2">
        Staff Software Engineer at <a href="https://breezy.hr" target="_blank" rel="noopener noreferrer" class="text-[var(--text-primary)] hover:underline">Breezy</a>
      </p>
      <p class="text-[var(--text-secondary)]">
        Customer-obsessed Product Engineer who ships
      </p>
    </section>
  </div>
</Layout>