---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by date, newest first
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get recent posts for homepage
const recentPosts = posts.slice(0, 5);
---

<Layout title="Riley Miller">
  <div class="py-20">
    <!-- Hero Section -->
    <section class="mb-20">
      <h1 class="text-4xl mb-4">
        Riley Miller
      </h1>
      <p class="text-[var(--text-secondary)] mb-8">
        Software Engineer
      </p>
      <p class="text-[var(--text-secondary)] max-w-2xl">
        I'm a software engineer passionate about building great products and solving complex problems. 
        This is my personal space where I share thoughts on software development, technology, and my journey in tech.
      </p>
    </section>

    <!-- Recent Posts -->
    <section>
      <h2 class="text-2xl mb-8">Recent Posts</h2>
      <div class="space-y-12">
        {recentPosts.map((post) => (
          <article>
            <a href={`/blog/${post.slug}`} class="group">
              <h3 class="text-lg mb-2 group-hover:text-[var(--text-primary)] transition-colors">
                {post.data.title}
              </h3>
              <time class="text-sm text-[var(--text-muted)]">
                {post.data.date.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
              <p class="mt-2 text-[var(--text-secondary)]">
                {post.data.description}
              </p>
            </a>
          </article>
        ))}
      </div>
      
      {posts.length > 5 && (
        <div class="mt-12">
          <a href="/blog" class="text-sm hover:text-[var(--text-primary)] transition-colors">
            View all posts â†’
          </a>
        </div>
      )}
    </section>
  </div>
</Layout>